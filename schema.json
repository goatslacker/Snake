{
  "snake": {
    "database": {
      "fileName": "dreamcatcher",
      "name": "ext:dreamcatcher",
      "version": "0.1",
      "displayName": "Dreamcatcher Database",
      "size": 100000000
    },
    "schema": {
      "dream": {
        "jsName": "Dream",
        "columns": {
          "title": { "type": "text" },
          "summary": { "type": "text" },
          "dream_date": { "type": "text" }
        }
      },
      "dream_search": {
        "jsName": "DreamSearch",
        "columns": {
          "dream_id": { "type": "integer", "foreign": "dream.id" },
          "word": { "type": "text" },
          "stem": { "type": "text" },
          "weight": { "type": "integer" }
        }
      },
      "dream_tag": {
        "jsName": "DreamTag",
        "columns": {
          "dream_id": { "type": "integer", "foreign": "dream.id" },
          "tag": { "type": "text" },
          "normalized": { "type": "text" }
        }
      }
    }
  }
}
